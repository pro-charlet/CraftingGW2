<div class="bloc left">
  <div class="titre"><h2>Liste des artisants</h2></div>
  <table style="width: 100%">
    <% craftmen.each_value do |crafting| %>
    <tr>
      <td colspan="3"><%= crafting[:name] %></td>  
    </tr>
    <% crafting[:members].each do |member| %>
    <tr>
      <td class="td_indent"></td>  
      <td><%= member[:name] %></td>  
      <td style="width: 50px"><%= member[:level] %></td>  
    </tr>  
    <% end %>
    <% end %>
  </table>
</div>
